<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="2dp"
        android:src="@drawable/cover" />

    <ImageView
        android:id="@+id/img_pan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_cover"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pan" />

    <yellow5a5.demo.boilingloadingview.View.FlameView
        android:id="@+id/flame"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@id/img_pan"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:FlameView_flameNum="5" />

    <ImageView
        android:id="@+id/img_carrot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_pan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:paddingLeft="30dp"
        android:src="@drawable/carrot" />

    <yellow5a5.demo.boilingloadingview.View.WaterView
        android:id="@+id/img_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_carrot"
        android:layout_centerHorizontal="true"
        android:src="@drawable/water_bg" />

    <ImageView
        android:id="@+id/img_potato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_water"
        android:layout_centerHorizontal="true"
        android:paddingRight="80dp"
        android:src="@drawable/potato" />

    <View
        android:id="@+id/img_pea1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@id/img_water"
        android:layout_alignLeft="@id/img_water"
        android:layout_marginLeft="40dp"
        android:background="@drawable/pea" />

    <View
        android:id="@+id/img_pea2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@id/img_water"
        android:layout_alignRight="@id/img_water"
        android:layout_marginRight="40dp"
        android:background="@drawable/pea" />

</RelativeLayout>